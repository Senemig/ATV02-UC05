@using Atividade2.Models
@model Pedido

<h1 class="display-4 text-center">Finalizando Pedido #@(Model.nPedido + 1)</h1>

<table class="table text-center table-bordered">
    <thead class="thead-dark">
        <th scope="col">N&deg; Item</th>
        <th scope="col">Descrição</th>
        <th scope="col">Quantidade</th>
        <th scope="col">Valor Unitário</th>
        <th scope="col">Valor Total</th>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.ListaItens.Count(); i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td>@Model.ListaItens[i].Descrição</td>
                <td>@Model.ListaItens[i].Quantidade</td>
                <td>R$@String.Format("{0:N2}", Model.ListaItens[i].Valor)</td>
                <td>R$@String.Format("{0:N2}", (Model.ListaItens[i].Valor * Model.ListaItens[i].Quantidade))</td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td class="text-center">Subtotal - R$@String.Format("{0:N2}", Model.ValorTotal)</td>
        </tr>
    </tbody>
</table>
<button class="btn btn-secondary"
    onclick="location.href='@Url.Action("ExibirPedido", "Pedido", new{i = Model.nPedido})'">Voltar</button>
<button class="btn btn-danger float-right"
    onclick="location.href='@Url.Action("DeletarPedido", "Home", new{i = Model.nPedido})'">Finalizar
    Pedido</button>